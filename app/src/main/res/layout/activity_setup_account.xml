<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_height="match_parent"
    tools:context="com.example.benjamin.learnblog.SetupAccount">

    <ImageButton
        android:contentDescription="Display Image"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_display_picture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/profile_image"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"/>

    <EditText
        android:layout_below="@id/btn_display_picture"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="Enteer display name..."
        android:inputType="textPersonName"
        android:id="@+id/et_dp_name"
        style="@style/edit_text_override"/>

    <Button
        android:id="@+id/btn_finish_setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finish setup"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:background="@color/colorPrimary"
        android:layout_margin="8dp"
        android:textSize="18sp"
        android:textColor="#ffffff"/>
</RelativeLayout>
